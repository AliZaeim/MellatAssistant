@page
@model Web.Pages.FaqModel
@{
    ViewData["Title"] = "پرسش و پاسخ از بیمه ملت";
}
@section Head{
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta http-equiv="content-language" content="fa" />
    <meta name="document-type" content="Public" />
    <meta name="document-rating" content="General" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="author" content="علی اصل زعیم" />
    <meta name="description" content="پرسش و پاسخ از بیمه ملت" />
    <link href="/Layout/Css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Layout/Css/bootstrap-rtl.min.css" rel="stylesheet" />
    <link href="/Layout/Css/animate.css" rel="stylesheet" />
    <link href="/Layout/Css/Style.css" rel="stylesheet" />
    <link href="/Layout/Css/owl-carousel/owl.carousel.min.css" rel="stylesheet" />
    <link href="/Layout/Css/sina-nav.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/css/all.min.css" rel="stylesheet" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="canonical" href="metainsur.ir/Faq" />
}
    @section Header{
    <partial name="_Header" />
}
    <section class="container-fluid pt-5 pb-4 pb-lg-0 intro-section">

        <div class="container mb-5  box br-top p-5 ">
            <h5 class="mb-4 bt-color text-center">پرسش و پاسخ</h5>
            <div class="row">
                <div class="col-md-12">
                    @foreach (var item in Model.questionAnswers.Where(w => w.IsActive).ToList())
                {
                    <h6 class="IRANSansWeb_Medium text-danger">@item.Question </h6>
                    <p>
                        @Html.Raw(item.Answer)
                    </p>
                }
            </div>
        </div>

    </div>
    <object class="d-none d-xl-block" type="image/svg+xml" data="Images/Svg/desktop-wave.svg"></object>
</section>
<section id="reason" class="container py-3 py-sm-3 ">
    <div class="row  mt-4 mx-1">
        <div class="col-lg-4  mb-3">
            <div class="value-body d-flex flex-sm-row flex-column text-sm-right text-center">
                <div class="mt-4">
                    <img src="/Images/icons/life-ins.png" />
                </div>
                <div class="p-3">
                    <a href="/Life-Insurance">
                        <h6 class="IRANSansWeb_Medium">درخواست بیمه زندگی</h6>
                        <p>استعلام شرایط برای جامع ترین بیمه زندگی کشور را اینجا انجام دهید. </p>
                    </a>

                </div>
            </div>
        </div>
        <div class="col-lg-4  mb-3">
            <div class="value-body d-flex flex-sm-row flex-column text-sm-right text-center">
                <div class="mt-4">
                    <img src="/Images/icons/third-ins.png" />
                </div>
                <div class="p-3">
                    <a href="/Third-Party-Price-Inquiry">
                        <h6 class="IRANSansWeb_Medium">درخواست بیمه ثالث</h6>
                        <p>بدون نیاز به مراجعه حضوری بیمه ثالث خود را آنلاین خریداری کنید. </p>
                    </a>

                </div>
            </div>
        </div>
        <div class="col-lg-4  mb-3">
            <div class="value-body d-flex flex-sm-row flex-column text-sm-right text-center">
                <div class="mt-4">                    
                    <img src="/Images/icons/car-ins.gif" />
                </div>
                <div class="p-3">
                    <a href="/Car-Body-Price-Inquiry">
                        <h6 class="IRANSansWeb_Medium">درخواست بیمه بدنه</h6>
                        <p>برای اولین بار در کشور صدور بیمه بدنه بدون نیاز به مراجعه شما. </p>
                    </a>

                </div>
            </div>
        </div>
    </div>
</section>
@section Footer{
    <partial name="_Footer" />
    }
    @section Scripts{
    <script src="/Layout/Js/jquery-2.0.0.min.js"></script>
    <script src="/Layout/Js/bootstrap.min.js"></script>
    <script src="/Layout/Js/owl.carousel.js"></script>
    <script src="/Layout/Js/custom.js"></script>
    <script src="/Layout/Js/sina-nav.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.1/js/all.min.js"></script>
    }


