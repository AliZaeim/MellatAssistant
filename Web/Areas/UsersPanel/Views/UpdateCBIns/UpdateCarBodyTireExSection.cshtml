@model Core.DTOs.SiteGeneric.CarBodyIns.UpdateCarBodyTireExSectionVM
<div class="container-fluid">
    <div class="row">
        <form asp-area="UsersPanel" asp-controller="UpdateCBIns" asp-action="UpdateCarBodyTireExSection" enctype="multipart/form-data"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#cbTiresExImages">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="guid" />
            <input type="hidden" asp-for="Str_AudioSystemFromTrunkImage" />
            <input type="hidden" asp-for="Str_InsideBandsImage" />
            <input type="hidden" asp-for="Str_RimsandTires1Image" />
            <input type="hidden" asp-for="Str_RimsandTires2Image" />
            <input type="hidden" asp-for="Str_RimsandTires3Image" />
            <input type="hidden" asp-for="Str_RimsandTires4Image" />

            <div class="offset-md-3 col-md-6 col-xs-12">
                <div class="form-group">
                    <label asp-for="RimsandTires1Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_RimsandTires1Image" />
                    <input asp-for="RimsandTires1Image" type="file" class="form-control" />
                    <span asp-validation-for="RimsandTires1Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RimsandTires2Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_RimsandTires2Image" />
                    <input asp-for="RimsandTires2Image" type="file" class="form-control" />
                    <span asp-validation-for="RimsandTires2Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RimsandTires3Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_RimsandTires3Image" />
                    <input asp-for="RimsandTires3Image" type="file" class="form-control" />
                    <span asp-validation-for="RimsandTires3Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RimsandTires4Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_RimsandTires4Image" />
                    <input asp-for="RimsandTires4Image" type="file" class="form-control" />
                    <span asp-validation-for="RimsandTires4Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="InsideBandsImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_InsideBandsImage" />
                    <input asp-for="InsideBandsImage" type="file" class="form-control" />
                    <span asp-validation-for="InsideBandsImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AudioSystemFromTrunkImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_AudioSystemFromTrunkImage" />
                    <input asp-for="AudioSystemFromTrunkImage" type="file" class="form-control" />
                    <span asp-validation-for="AudioSystemFromTrunkImage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>
<script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>