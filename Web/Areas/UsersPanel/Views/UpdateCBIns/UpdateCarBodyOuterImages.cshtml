                    <input asp-for="Angle1Image" type="file" class="form-control" />
                    <span asp-validation-for="Angle1Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Angle2Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_Angle2Image" />
                    <input asp-for="Angle2Image" type="file" class="form-control" />
                    <span asp-validation-for="Angle2Image" class="text-danger"></span>
                </div>
                <div class="form-group">
