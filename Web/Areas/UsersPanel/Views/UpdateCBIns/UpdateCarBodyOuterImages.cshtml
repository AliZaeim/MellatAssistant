                    <input asp-for="Angle4Image" type="file" class="form-control" />
                    <span asp-validation-for="Angle4Image" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-4 col-xs-12">
                 <div class="form-group">
                    <label asp-for="HoodImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_HoodImage" />
                    <input asp-for="HoodImage" type="file" class="form-control" />
                    <span asp-validation-for="HoodImage" class="text-danger"></span>
                </div>
                <div class="form-group">
