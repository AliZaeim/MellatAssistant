                </div>
                <div class="form-group">
                    <label asp-for="ApprenticeSideImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_ApprenticeSideImage" />
                    <input asp-for="ApprenticeSideImage" type="file" class="form-control" />
                    <span asp-validation-for="ApprenticeSideImage" class="text-danger"></span>
