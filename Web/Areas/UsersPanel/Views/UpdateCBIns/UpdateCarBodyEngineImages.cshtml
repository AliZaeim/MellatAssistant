@model Core.DTOs.SiteGeneric.CarBodyIns.UpdateCarBodyEngineStateVM
<div class="container-fluid">
    <div class="row">
        <form asp-area="UsersPanel" asp-controller="UpdateCBIns" asp-action="UpdateCarBodyEngineImages" enctype="multipart/form-data"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#cbEngineImages">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="guid" />
            <input type="hidden" asp-for="Str_ChassisEngravingImage" />
            <input type="hidden" asp-for="Str_EngineFullViewImage" />
            <input type="hidden" asp-for="Str_EngineLicensePlate" />
                
            <div class="offset-md-3 col-md-6 col-xs-12">                 
                <div class="form-group">
                    <label asp-for="EngineFullViewImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_EngineFullViewImage" />
                    <input asp-for="EngineFullViewImage" type="file" class="form-control" />
                    <span asp-validation-for="EngineFullViewImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EngineLicensePlate" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_EngineLicensePlate" />
                    <input asp-for="EngineLicensePlate" type="file" class="form-control" />
                    <span asp-validation-for="EngineLicensePlate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChassisEngravingImage" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/carbody/@Model.Str_ChassisEngravingImage" />
                    <input asp-for="ChassisEngravingImage" type="file" class="form-control" />
                    <span asp-validation-for="ChassisEngravingImage" class="text-danger"></span>
                </div>                
            </div>       
            
            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>

        </form>

    </div>
</div>
<script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>