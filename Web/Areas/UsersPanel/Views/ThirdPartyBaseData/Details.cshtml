@using Core.Services.Interfaces;
@inject IUserService _userService
@{
    ViewData["Title"] = "جزئیات اطلاعات پایه بیمه ثالث";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">جزئیات اطلاعات پایه بیمه ثالث</h1>
<div class="container-fluid">
    <div>

        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DriverAccidentPremium)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DriverAccidentPremium)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LegalDiscounts)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LegalDiscounts)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.LegalDiscountPermit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LegalDiscountPermit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VAT)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VAT)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.RegDate)
            </dt>
            <dd class="col-sm-10">
                @Model.RegDate.ToShamsiN()
            </dd>
        </dl>
    </div>
</div>

<div>
    @if (_userService.CheckPermissionByName("edittbi",User.Identity.Name))
    {
        <a asp-action="Edit" asp-route-id="@Model.Id">ویرایش</a> <span>|</span>
    }    
    <a asp-action="Index">بازگشت</a>
</div>
