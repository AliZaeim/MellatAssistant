@model DataLayer.Entities.Supplementary.AdminSlider

@{
    ViewData["Title"] = "حذف اسلایدر";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-danger">حــذف اسلایدر</h1>

<h3>آیا مطمئن به حذف اسلایدر هستید؟</h3>
<div class="container-fluid">
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Comment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Comment)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            <img src="/images/AdminSliders/@Model.Image" width="100" height="100" />
        </dd>
        
        <dt class = "col-sm-2">
            فعال
        </dt>
        <dd class = "col-sm-10">
            @((Model.IsActive)? "بله":"خیر")
        </dd>     
        
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="حذف" class="btn btn-danger" /> |
        <a asp-action="Index">بازگشت</a>
    </form>
</div>
