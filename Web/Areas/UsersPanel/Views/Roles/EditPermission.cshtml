@model DataLayer.Entities.Permissions.Permission

@{
    ViewData["Title"] = "ویرایش دسترسی";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ویرایش دسترسی</h1>

<div class="container-fluid">
    <div class="row">
        <form asp-action="EditPermission">
            <div class="offset-md-4 col-md-4 col-xs-12">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PermissionId" />
                <div class="form-group">
                    <label asp-for="PermissionTitle" class="control-label"></label>
                    <input asp-for="PermissionTitle" class="form-control" />
                    <span asp-validation-for="PermissionTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PermissionName" class="control-label"></label>
                    <input asp-for="PermissionName" class="form-control" placeholder="انگلیسی باشد" />
                    <span asp-validation-for="PermissionName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="ParentId"></label>
                    <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                        <option value="">در صورت نیاز والد را انتخاب کنید ...</option>
                    </select>
                </div>
            </div>
            <div class="form-group offset-md-4 col-md-4 col-xs-12">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}
