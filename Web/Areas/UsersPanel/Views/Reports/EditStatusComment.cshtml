@model Core.DTOs.Admin.StatusCommentVM
@{    
    string command = "Submit_EditComment('" + Model.RefreshElId + "')";
}
<div class="row">
    <div class="offset-md-2 col-md-8 col-xs-12">
        <form id="editCommentForm" asp-area="UsersPanel" asp-controller="Reports" asp-action="EditStatusComment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="InsId" />
            <input type="hidden" asp-for="RegDate" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="InsStatusId" />
            <input type="hidden" asp-for="InsFinanceStatusId" />
            <input type="hidden" asp-for="RefreshElId" />
            <input type="hidden" asp-for="InsType" />
            <input type="hidden" asp-for="StatusType" />
            <input type="hidden" asp-for="Location" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" maxlength="500" rows="3" autofocus class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">                
                <input type="button" onclick="@command"  data-refid="@Model.RefreshElId" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>