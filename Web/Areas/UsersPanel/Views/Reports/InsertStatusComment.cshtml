@model Core.DTOs.Admin.StatusCommentVM
@{
    string command = "Submit_InsertComment('" + Model.RefreshElId + "')";        
}
<div class="row">
    <div class="offset-md-2 col-md-8 col-xs-12">

        <form id="insertCommentForm" asp-area="UsersPanel" asp-controller="Reports" asp-action="InsertStatusComment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="InsId" />
            <input hidden  asp-for="InsStatusId" value="@Model.InsStatusId" />
            <input hidden  asp-for="InsFinanceStatusId" value="@Model.InsFinanceStatusId"  />
            <input hidden asp-for="RefreshElId" class=form-control />
            <input hidden asp-for="InsType" />
            <input hidden asp-for="StatusType" />
            <input hidden asp-for="Location" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <textarea asp-for="Comment" id="StatusComment" maxlength="500" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="button"  data-refid="@Model.RefreshElId" onclick="@command" value="ثبت" class="btn btn-primary col-xs-12" />

            </div>
        </form>
    </div>
</div>

