@model DataLayer.Entities.InsPolicy.CarBody.CarBodyLegalDiscount

@{
    ViewData["Title"] = "ثبت تخفیف و اضافات قانونی بیمه بدنه";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">ثبت تخفیف و اضافات قانونی بیمه بدنه</h1>
<div class="container-fluid">
    <div class="row">
        <div class="offset-md-4 col-md-4 col-xs-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control">
                        <option value="dis">تخفیف</option>
                        <option value="add">اضافه نرخ</option>
                        <option value="fes">جشنواره</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Percent" class="control-label"></label>
                    <input asp-for="Percent" class="form-control" />
                    <span asp-validation-for="Percent" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="State" class="control-label"></label>
                    <select asp-for="State" class="form-control">
                        <option value="true">فعال</option>
                        <option value="false">غیر فعال</option>
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="ثبت" class="btn btn-primary col-xs-12" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>
@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

