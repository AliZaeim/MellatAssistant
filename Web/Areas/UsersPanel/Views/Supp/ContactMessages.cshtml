@model IEnumerable<DataLayer.Entities.Supplementary.ContactMessage>
@using Core.Convertors;
@{
    ViewData["Title"] = "پیامهای کاربران";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="text-xs-center alert alert-info">پیامهای کاربران</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">ثبــت</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.FullName)
            </th>

            <th class="text-xs-center align-middle">
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th class="text-xs-center align-middle">
                وضعیت
            </th>

            <th class="text-xs-center align-middle">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-xs-center align-middle">
                    @item.CreatedDate.ToShamsiWithTime()
                </td>
                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>

                <td class="text-xs-center align-middle">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td class="text-xs-center align-middle">
                    @if (item.Read)
                    {
                        <span class="text-success">خوانده شده</span>
                    }
                    else
                    {
                        <span class="text-danger">خوانده نشده</span>
                    }
                </td>
                <td class="text-xs-center align-middle">
                    <a asp-action="ContactMessageDetails" asp-route-id="@item.Id">جزئیات</a>
                </td>
            </tr>
        }
    </tbody>
</table>
