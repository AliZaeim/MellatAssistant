@model DataLayer.Entities.Supplementary.Cooperation

@{
    ViewData["Title"] = "ویرایش توضیحات درخواست همکاری";
    Layout = "~/Areas/UsersPanel/Views/Shared/_AdminLayout.cshtml";
}


<h1 class="text-xs-center alert alert-info">ویرایش توضیحات درخواست همکاری</h1>

<div class="container-fluid">
    <div class="row">
        <div class="offset-md-4 col-md-4 col-xs-12">
            <form asp-action="Edit" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="RegDate" />
                <input type="hidden" asp-for="FullName" />
                <input type="hidden" asp-for="Cellphone" />
                <input type="hidden" asp-for="LevelOfEducation" />
                <input type="hidden" asp-for="CountyId" />
                <input type="hidden" asp-for="BirthDate" />

                <div class="form-group">
                    <label asp-for="TodoComment" class="control-label"></label>
                    <textarea asp-for="TodoComment" maxlength="500" rows="5" class="form-control"></textarea>
                    <span asp-validation-for="TodoComment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
                </div>
            </form>
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">بازگشت</a>
</div>

@section Scripts
    {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    }