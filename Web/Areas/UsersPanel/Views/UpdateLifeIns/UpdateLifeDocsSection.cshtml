@model Core.DTOs.SiteGeneric.LifeIns.UpdateLifeInsDocsStepVM
<div class="container-fluid">
    <div class="row">
        <form asp-area="UsersPanel" asp-controller="UpdateLifeIns" asp-action="UpdateLifeDocsSection" enctype="multipart/form-data"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-mode="replace"
              data-ajax-update="#lifeDocs">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="guid" />
            <input type="hidden" asp-for="StrQuestionnairePage1Image" />
            <input type="hidden" asp-for="StrQuestionnairePage2Image" />
            <input type="hidden" asp-for="StrQuestionnairePage3Image" />
            <input type="hidden" asp-for="StrQuestionnairePage4Image" />
            <div class="col-xs-12">                
                <div class="form-group">
                    <label asp-for="QuestionnairePage1Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/life/@Model.StrQuestionnairePage1Image" />
                    <input asp-for="QuestionnairePage1Image" type="file" class="form-control" />
                    <span asp-validation-for="QuestionnairePage1Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionnairePage2Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/life/@Model.StrQuestionnairePage2Image" />
                    <input asp-for="QuestionnairePage2Image" type="file" class="form-control" />
                    <span asp-validation-for="QuestionnairePage2Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionnairePage3Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/life/@Model.StrQuestionnairePage3Image" />
                    <input asp-for="QuestionnairePage3Image" type="file" class="form-control" />
                    <span asp-validation-for="QuestionnairePage3Image" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QuestionnairePage4Image" class="control-label"></label><img width="30" height="30" class="float-md-left zoom" src="~/images/Ins/life/@Model.StrQuestionnairePage4Image" />
                    <input asp-for="QuestionnairePage4Image" type="file" class="form-control" />
                    <span asp-validation-for="QuestionnairePage4Image" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group">
                <input type="submit" value="ویرایش" class="btn btn-primary col-xs-12" />
            </div>

        </form>

    </div>
</div>

<script src="~/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
